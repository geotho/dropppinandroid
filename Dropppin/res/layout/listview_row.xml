<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#4533B5E5" >

    <ImageView
        android:id="@+id/rowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:contentDescription="Placeholder picture"
        android:src="@android:drawable/ic_menu_mapmode" />

    <TextView
        android:id="@+id/rowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rowImage"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/rowImage"
        android:ems="10"
        android:text="testing title"
        android:textSize="15dp" >

    </TextView>

    <TextView
        android:id="@+id/rowDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rowTitle"
        android:layout_alignRight="@+id/rowTitle"
        android:layout_below="@+id/rowTitle"
        android:ems="10"
        android:text="testing title"
        android:textSize="12dp"
        android:textColor="#777777" />

</RelativeLayout>